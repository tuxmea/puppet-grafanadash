Listen <%= scope.lookupvar('grafanadash::grafana::params::grafana_port') %>

<VirtualHost *:<%= scope.lookupvar('grafanadash::grafana::params::grafana_port') %>>
	ServerName <%= scope.lookupvar('grafanadash::grafana::params::grafana_host') %>
	DocumentRoot "/opt/grafana"
</VirtualHost>
<Directory /opt/grafana>
  Require all granted
</Directory>
